<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <title>Início | Portfólio de <%= inicioData.nome %>
    </title>
    <link rel="stylesheet" href="/css/style.css">

    <link href='https://fonts.googleapis.com/css?family=Inter' rel='stylesheet'>
    <link href="https://fonts.googleapis.com/css2?family=League+Spartan:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body>
    <%- include('partials/navbar') %>

    <% if (inicioData.nome) { %>
    <section class="topo-do-site">
        <div class="interface">
            <div class="flex">
                <div class="txt-topo-site">
                    <h1>Olá, eu sou <span><strong><%= inicioData.nome %></strong></span></h1>
                    <article>
                        <% 
                            const paragrafos = inicioData.introducao.split('\n').filter(p => p.trim() !== ''); 
                            paragrafos.forEach(par => { 
                        %>
                            <p><%= par %></p>
                        <% }); %>
                    </article>
                </div>
                <div class="img-topo-site">
                    <img src="/img/<%= inicioData.fotoPerfil %>" alt="Foto de <%= inicioData.nome %>">
                </div>
            </div>

        <div class="flex" style="margin-top: 50px;">
            <div class="btn-social">
                <% if (inicioData.icones.github) { %>
                    <a href="<%= inicioData.icones.github %>" target="_blank" title="Acesse meu GitHub"><button><i class="bi bi-github"></i></button></a>
                <% } %>
                <% if (inicioData.icones.linkedin) { %>
                    <a href="<%= inicioData.icones.linkedin %>" target="_blank" title="Acesse meu perfil no LinkedIn"><button><i class="bi bi-linkedin"></i></button></a>
                <% } %>
                <% if (inicioData.icones.email) { %>
                    <a href="<%= inicioData.icones.email %>" target="_blank" title="Envie um email"><button><i class="bi bi-envelope"></i></button></a>
                <% } %>
                <% if (inicioData.icones.curriculo) { %>
                    <a href="/docs/<%= inicioData.icones.curriculo %>" target="_blank" title="Acesse meu Currículo"><button><i class="bi bi-file-earmark-pdf"></i></button></a>
                <% } %>
            </div>

            <% if (inicioData.contato) { %>
            <div class="btn-contato">
                <a href="<%= inicioData.contato %>" target="_blank" rel="noopener"><button>Converse comigo</button></a>
            </div>
            <% } %>
        </div>
    </div>
    </section>
    <% } %>
</body>


</html>