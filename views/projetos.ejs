<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8" />
    <title>Projetos - Auto-Contido</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Fontes e Ícones -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f7f9fb;
        }

        .carousel-inner>.carousel-item>a>img {
            max-height: 600px;
            width: 100%;
            object-fit: contain;
        }

        @media (max-width: 576px) {
            .carousel-inner>.carousel-item>a>img {
                max-height: 350px;
            }
        }

        .card-project {
            transition: transform 0.3s ease-in-out;
        }

        .card-project:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        .carousel-control-next:focus, .carousel-control-next:hover, .carousel-control-prev:focus, .carousel-control-prev:hover {
            color: #007bff;
            background-color: #007bff;
        }

        iframe {
            width: 100%;
            height: 600px;
            border: 1px solid #ccc;
            border-radius: 8px;
            margin-top: 40px;
        }

        #projetoContainer {
            display: none; /* escondido inicialmente */
            margin-top: 40px;
            position: relative;
        }

        #fecharProjeto {
            position: absolute;
            top: -40px;
            right: 0;
            background-color: #dc3545;
            border: none;
            color: white;
            padding: 6px 12px;
            border-radius: 4px;
            cursor: pointer;
        }

        #fecharProjeto:hover {
            background-color: #bb2d3b;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <%- include('partials/navbar') %>

    <div class="container mx-auto px-4 py-8">
        <!-- Carrossel -->
        <div id="projetosCarousel" class="carousel slide shadow-xl rounded-2xl overflow-hidden bg-white" data-bs-ride="carousel">

            <!-- Indicadores -->
            <div class="carousel-indicators">
                <% projetos.forEach((_, index) => { %>
                    <button type="button" data-bs-target="#projetosCarousel" data-bs-slide-to="<%= index %>" class="<%= index === 0 ? 'active' : '' %>" aria-current="<%= index === 0 ? 'true' : 'false' %>" aria-label="Slide <%= index + 1 %>"></button>
                <% }) %>
            </div>

            <!-- Slides -->
            <div class="carousel-inner">
                <% projetos.forEach((projeto, index) => { %>
                    <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                        <a href="#" class="d-block text-decoration-none projeto-link" data-src="<%= projeto.htmlSrc %>">
                            <img src="<%= projeto.imgSrc %>" class="d-block w-100" alt="<%= projeto.nome %>" />
                            <div class="carousel-caption d-none d-md-block bg-black bg-opacity-50 p-3 rounded-t-lg">
                                <h5><%= projeto.nome %></h5>
                                <p><%= projeto.descricao %></p>
                            </div>
                        </a>
                    </div>
                <% }); %>
            </div>

            <!-- Controles -->
            <button class="carousel-control-prev" type="button" data-bs-target="#projetosCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Anterior</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#projetosCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Próximo</span>
            </button>
        </div>

        <!-- Container do iframe para visualizar o projeto -->
        <div id="projetoContainer">
            <button id="fecharProjeto">Fechar</button>
            <iframe id="projetoFrame" src="" frameborder="0"></iframe>
        </div>
    </div>

    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Script para trocar conteúdo do iframe e controlar botão -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const links = document.querySelectorAll('.projeto-link');
            const iframe = document.getElementById('projetoFrame');
            const container = document.getElementById('projetoContainer');
            const btnFechar = document.getElementById('fecharProjeto');

            links.forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    const src = link.getAttribute('data-src');
                    if (src) {
                        iframe.src = src;
                        container.style.display = 'block'; // Mostrar iframe e botão
                        window.scrollTo({
                            top: container.offsetTop - 20,
                            behavior: 'smooth'
                        });
                    }
                });
            });

            btnFechar.addEventListener('click', () => {
                iframe.src = '';
                container.style.display = 'none'; // Esconder iframe e botão
            });
        });
    </script>
</body>

</html>
